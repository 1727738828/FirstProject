/* 互动栏目 */
.interactive {
  height: 822rpx;
}

.interactive_list {
  height: 652rpx;
}

.interactive_item {
  width: 100%;
  height: 326rpx;
  justify-content: space-between;
}

.interactive_con image {
  height: 224rpx!important;
}

.interactive_item .recommend_con:last-child {
  margin-left: 1%;
}

/* 尾部 */
.footer {
  height: 85rpx;
  margin-top: 28rpx;
  background: #f7f9fa;
}

.footer_con {
  width: 490rpx;
  height: 85rpx;
  margin: 0 auto;
}

.footer_word {
  font-size: 22rpx;
  line-height: 85rpx;
