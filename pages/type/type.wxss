/* pages/type/type.wxss */
.box {
  width: 100%;
}

.flex {
  display: flex;
}

.row {
  flex-direction: row;
}

.column {
  flex-direction: column;
}

/* 分类导航栏 */
.type_con {
  height: 130rpx;
}

.type_nav {
  width: 100%;
  height: 130rpx;
  position: fixed;
  z-index: 99;
  background: #fff;
  border-bottom: 2rpx solid #e6e6e6;
}

.type_nav_item {
  height: 65rpx;
  justify-content: space-between;
  margin: 0 40rpx 0 35rpx;
}

.type_nav_info text {
  /* width: 96rpx; */
  display: block;
  height: 65rpx;
  line-height: 65rpx;
  font-size: 26rpx;
  color: #555555;
  text-align: center;
}

.type_nav_info .on {
  color: #f5a623;
  border-bottom: 2rpx solid #f5a623;
}

