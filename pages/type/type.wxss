/* pages/type/type.wxss */
.box {
  width: 100%;
}

.flex {
  display: flex;
}

.row {
  flex-direction: row;
}

.column {
  flex-direction: column;
}

/* 分类导航栏 */
.type_con {
  height: 130rpx;
}

.type_nav {
  width: 100%;
  height: 130rpx;
  position: fixed;
}

.type_nav_item {
  height: 65rpx;
  justify-content: space-between;
  margin: 0 25rpx 0 15rpx;
}

.type_nav_info text {
  width: 96rpx;
  display: block;
  height: 65rpx;
  line-height: 65rpx;
  font-size: 26rpx;
  color: #555555;
  text-align: center;
}

.hidden {
  height: 4rpx;
  width: 40rpx;
  margin: -6rpx auto 0;
  background:#f5a623; 
  border-radius: 10rpx;
  display: none;
}

.first_one text{
  color: #f5a623;
}

.first_one .hidden {
  display: block;
}

/* 推荐、最热、最新  */
.choose {
  height: 72rpx;
  border-top: 2rpx solid #e6e6e6;
  justify-content: space-between;
  padding: 0 25rpx 0 15rpx;
}

.choose_type text:first-child {
  color: #f5a829;
}

.choose_type text,
.choose_btn text {
  width: 96rpx;
  height: 26rpx;
  display: block;
  font-size: 26rpx;
  margin: 24rpx 0;
  line-height: 26rpx;
  text-align: center;
  color: #555555;
}

.choose_type text:nth-of-type(2) {
  border-left: 2rpx solid #e6e6e6;
  border-right: 2rpx solid #e6e6e6;
}

/* 图片列表 */
.comic_item {
  height: 192rpx;
  border-bottom: 2rpx solid #e6e6e6;
}

.comic_item:last-child {
  border: 0;
}

.comic_item image {
  width: 310rpx;
  height: 192rpx;
  background: lightpink;
}

.comic_detail {
  margin-left: 30rpx;
}

.comic_author,
.text {
  display: block;
  color: #999999;
  
}

.comic_title {
  display: block;
  font-size: 30rpx;
  margin: 26rpx 0;
  color: #181818;
}

.comic_author {
  margin: 6rpx 0;
  font-size: 26rpx;
}

.comic_info {
  height: 26rpx;
  margin: 18rpx 0 24rpx;
  
}

.text {
  font-size: 24rpx;
  height: 26rpx;
  line-height: 26rpx;
}

.text_comment {
  margin-left: 30rpx;
}

/* 尾部 */
.footer {
  height: 85rpx;
  margin-top: 28rpx;
  background: #f7f9fa;
}

.footer_con {
  width: 490rpx;
  height: 85rpx;
  margin: 0 auto;
}

.footer_word {
  font-size: 22rpx;
  line-height: 85rpx;
  /* text-align: center; */
  color: #81858a;
  margin: 0 14rpx;
}

.footer_left,
.footer_right {
  width: 114rpx;
  height: 1rpx;
  background: #e5e5e5;
  margin: 41rpx 0;
}