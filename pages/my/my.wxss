/* pages/me/me.wxss */

.box {
  width: 100%;
  background: #fde23d;
}

.userinfo {
  width: 100%;
  height: 200rpx;
  position: relative;
  display: flex;
  flex-direction: column;
}

.userinfo_bg {
  width: 100%;
  height: 200rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
}

.usericon {
  width: 130rpx;
  height: 116rpx;
  margin: 0 auto;
  display: flex;
  justify-content: center;
  z-index: 99;
}

.user_detail {
  height: 84rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  z-index: 99;
}

.user_detail text {
  display: block;
  height: 84rpx;
  line-height: 84rpx;
}

.userleft {
  width: 200rpx;
  display: flex;
  flex-direction: row;
  margin-left: 44%;
}

.username {
  font-size: 30rpx;
}

.usersex, .useredit {
  width: 30rpx;
  height: 30rpx;
}

.usersex {
  margin: 27rpx 15rpx;
}

.useredit {
  margin: 28rpx 5rpx 26rpx;
}

.userright {
  width: 180rpx;
  display: flex;
  flex-direction: row;
  height: 84rpx;
}

.suggest {
  font-size: 26rpx;
  color: #4e4d49;
}

/* tab选项布局 */

.swiper-tab {
  width: 100%;
  text-align: center;
  line-height: 80rpx;
}

/* 菜单内容布局 */

.swiper-tab-list {
  font-size: 26rpx;
  display: inline-block;
  width: 120rpx;
  color: #4e4d49;
}

.swiper-tab-list2 {
  font-size:26rpx;
  display: inline-block;
  width: 120rpx;
  color: #4e4d49;
  margin-left: 240rpx;
}

/* 点击菜单呈现的样式 */

.on {
  color: orange;
  border-bottom: 1px solid orange;
}

/* 点击菜单后出现的内容布局 */
.swiper_con {
  height: 800rpx;
  background: #fff;
  border-radius: 20rpx 20rpx 0 0;
  display: flex;
  flex-direction: column;
}

.swiper-box {
  height: 100%;
  width: 100%;
  overflow: hidden;
  
  display: flex;
  justify-content: center;
  text-align: center;
}

.history {
  width: 100%;
  height: 660rpx;
}

.attention {
  width: 100%;
  height: 660rpx;
}
